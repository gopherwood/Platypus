{
	"layers":[{
        "id": "action-layer",
        "components": [
            {"type": "camera", "width": 960},
            {
                "type": "handler-render-createjs",
                "autoClear": true
            },{
                "type": "entity-container",
                "entities": [{
    "id": "render-sprite-basic",
    "components":[{
        "type": "render-sprite",
        "image": "platypus",
        "source": {
            "width":  343,
            "height": 439  
        }
    }],
    "properties":{
        "x": 0,
        "y": 0
    }
},{
                    "type": "render-sprite-basic",
                    "properties": {
                        "scaleY": 0.25,
                        "y": 439
                    }
                },{
                    "type": "render-sprite-basic",
                    "properties": {
                        "scaleX": 0.25,
                        "scaleY": 0.25,
                        "x": 343,
                        "y": 439
                    }
                },
                
                // REGISTRATION (registration point on original source image)
                {
                    "type": "render-sprite-small-reg-top"
                },{
                    "type": "render-sprite-small-reg-center"
                },{
                    "type": "render-sprite-small-reg-bottom"
                },
                
                // MASKS (what appears)
                {
                    "type": "render-sprite-small-mask-api"
                },{
                    "type": "render-sprite-small-mask-json"
                },
                
                // PINS (multiple images pinned together)
                {
                    "type": "render-sprite-small-pin"
                },{
                    "type": "render-sprite-small-pin-rotated"
                }
                
                ]
            }
        ]
    },{
        "id": "code-view-layer",
        "components": [{
            "type": "handler-render-dom"
        },{
            "type": "entity-container", 
            "entities": [{
                "type": "code-view"
            },{
                "type": "next-button",
                "scene": "render-sprite-scale-x"
            },{
                "type": "back-button"
